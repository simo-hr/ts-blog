datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  published  Boolean  @default(false)
  content    String
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}
